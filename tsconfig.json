{
  "compilerOptions": {
    "target": "ES2020",                          // Sets the JavaScript version. ES2020 supports async/await and other modern features.
    "module": "CommonJS",                        // Node.js uses CommonJS, so this is typically the best setting.
    "lib": ["ES2020"],                           // Include definitions for the ES2020 standard library.
    "moduleResolution": "node",                  // Allows TypeScript to find third-party modules in node_modules.
    "outDir": "./dist",                          // Output compiled files to the dist folder.
    "rootDir": "./src",                          // Specify the root directory for TypeScript files.
    "strict": true,                              // Enable strict type-checking.
    "esModuleInterop": true,                     // Allow interoperability between CommonJS and ES Modules.
    "skipLibCheck": true,                        // Skip type checks on library files to speed up the build process.
    "forceConsistentCasingInFileNames": true,    // Enforces consistent file naming.
    "resolveJsonModule": true,                   // Allow importing JSON files.
    "noImplicitAny": true,                       // Prevents variables from having an `any` type.
    "isolatedModules": true,                     // Required for compatibility with transpile-only setups.
    "useUnknownInCatchVariables": true,          // Ensures better type safety with unknown instead of any.
    "incremental": true,                         // Improves build speed with incremental builds.
    "sourceMap": true                            // Generates sourcemaps for easier debugging.
  },
  "include": ["src"],                            // Only include files in the `src` directory.
  "exclude": ["node_modules", "dist"]            // Exclude unnecessary files from compilation.
}
